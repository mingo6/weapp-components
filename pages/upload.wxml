
<view class='title'>图片上传</view>

<!--  multiple: 图片数量，默认 1  -->
<image-upload id='image-upload' multiple='1'></image-upload>

<button bindtap='getImageUrls'>打印图片链接</button>



<view style='padding: 50rpx 0'>请打开/components/upload/oss/env.js配置oss上传</view>

<view class='title'>城市三级联动</view>
<form class="form">
	<view class='form-item'>
		<text>所在地区</text>
		<city-picker id='city-picker'></city-picker>
	</view>
</form>

<view class='title'>获取验证码</view>
<form class="form">
	<view class='form-item'>
		<text>联系电话</text>
		<input type='number' bindinput='getMobile' placeholder='请输入联系电话'></input>
	</view>
	<view class='form-item'>
		<text>验 证 码</text>
		<input placeholder='请输入验证码' type='number' name='verifyCode'></input>
		<verify-code bindtap='getVerifyCode' id='verify-code'></verify-code>
	</view>
</form>

