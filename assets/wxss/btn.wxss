
button::after, button::before {
   display: none;
}

.btn {
   position: relative;
   background-color: #fff;
   margin: 0;
   padding: 20rpx 30rpx;
   border-radius: 6rpx;
	overflow: hidden;
   border: 1rpx solid #f5f5f5;
   font-size: 28rpx;
   box-sizing: border-box;
   vertical-align: middle;
   display: flex;
   justify-content: center;
   align-items: center;
	box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, .05);
	line-height: 1.5
}

.btn-mini {
   padding: 10rpx 15rpx;
   font-size: 24rpx;
}
.btn__primary {
   color: #fff;
   background-color: #4b0;
   border-color: #4b0;
}

.btn__danger {
   color: #fff;
   background-color: #f44;
   border-color: #f44;
}

.btn__warn {
   color: #fff;
   background-color: #f85;
   border-color: #f85;
}

.btn__disabled {
   color: #999 !important;
   background: #f8f8f8 !important;
   border-color: #f5f5f5 !important;
   cursor: not-allowed !important;
   opacity: 1 !important;
}

.btn__yellow {
	color: #fff;
	background-color: #F8B708;
	border-color: #F8B708;
}
