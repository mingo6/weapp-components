.editor {
	background-color: #fff;
	padding: 0 20rpx;
}
.editor .menu-btn {
	padding: 10rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
	border-bottom: 1rpx solid #f8f8f8;
}
.editor .menu-btn text:first-child {
	margin-left: 0
}
.editor .menu-btn text:last-child {
	margin-right: 0
}
.editor .menu-btn text {
	font-size: 38rpx;
	display: inline-block;
	padding: 10rpx;
}
.editor .textarea {
	height: calc(100vh - 500rpx);
	padding: 20rpx 0;
}


