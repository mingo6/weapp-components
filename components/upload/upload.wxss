.image-upload {
	display: flex;
	height: 200rpx;
	background-color: #fff;
	padding: 20rpx;
}
.image-upload image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 4rpx;
}

.image-item {
   position: relative;
	font-size: 0;
}
.image-item image {
	display: block;
}
.image-item text {
   position: absolute;
	top: 0;
	left: 0;
   width: 100%;
   height: 100rpx;
   color: #fff;
   font-size: 32rpx;
   z-index: 100;
   background: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: center;
	justify-content: center;
}
.image-item .image-delete {
	position: absolute;
	top: 105rpx;
	left: 20rpx;
	width: 60rpx;
	height: 60rpx;
}
.image-item + .image-item {
   margin-left: 10rpx;
}