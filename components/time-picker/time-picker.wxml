<picker-view bindchange='handleChange' value='{{ [__date, __time] }}' class='picker-view' indicator-class='picker-indicator'>
   <picker-view-column>
      <view wx:for='{{ __dates }}' wx:key='__date_{{ index }}' class='picker-view__item' style='line-height:45px'>{{ item }}</view>
   </picker-view-column>
   <picker-view-column>
      <view wx:for='{{ __times }}' wx:key='__time_{{ index }}' class='picker-view__item' style='line-height:45px'>{{ item }}</view>
   </picker-view-column>
</picker-view>